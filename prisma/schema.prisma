// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GitHubRef {
  // fullVersionOrBranch v0.17.0, v6.0.1
  ref          String   @id
  // markdown process release notes
  releaseNotes String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // relations
  docs Doc[]
}

model Doc {
  id         String   @id @default(cuid())
  filePath   String
  md         String
  html       String
  lang       String
  hasContent Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // frontmatter attributes
  title        String
  order        Int?
  disabled     Boolean @default(false)
  siblingLinks Boolean @default(false)
  published    String?
  description  String?
  hidden       Boolean @default(false)
  toc          Boolean @default(true)

  // relations
  githubRef   GitHubRef @relation(fields: [githubRefId], references: [ref], onDelete: Cascade)
  githubRefId String

  // unique filePath per fullVersionOrBranch and lang
  // /installation/add-to-a-website.md in EN v6.0.0 ✅
  // /installation/add-to-a-website.md in FR v6.0.0 ✅
  @@unique([filePath, githubRefId, lang])
}
