// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Version {
  // fullVersionOrBranch v0.17.0, v6.0.1
  fullVersionOrBranch String @id
  // versionHeadOrBranch v0.17, v6
  versionHeadOrBranch String
  // markdown process release notes
  releaseNotes        String

  // relations
  docs Doc[]
}

model Doc {
  id         String  @id @default(cuid())
  filePath   String
  md         String
  html       String
  lang       String
  hasContent Boolean @default(false)

  // frontmatter attributes
  title        String
  order        Int?
  disabled     Boolean @default(false)
  siblingLinks Boolean @default(false)
  published    String?
  description  String?
  hidden       Boolean @default(false)
  toc          Boolean @default(true)

  // relations
  version   Version @relation(fields: [versionId], references: [fullVersionOrBranch], onDelete: Cascade)
  versionId String

  // unique filePath per fullVersionOrBranch and lang
  // /installation/add-to-a-website.md in EN v6.0.0 ✅
  // /installation/add-to-a-website.md in FR v6.0.0 ✅
  @@unique([filePath, versionId, lang])
}
